mixin alert(time)
  -if (messages.info)
    .message
      div(class="alert alert-success" show-alert data-time=time) #{messages.info} <span close-alert>X</span>

mixin alert-error(time)
  -if (messages.error)
    .message
      div(class="alert alert-danger" show-alert data-time=time) #{messages.error} <span close-alert>X</span>
