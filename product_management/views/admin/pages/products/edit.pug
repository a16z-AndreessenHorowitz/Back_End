extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)
  +alert(5000)
  h1(class="mb-4") Cập nhật sản phẩm
  //- div #{product} kiểm tra xem đổ ra giao diện chưa
  form(action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH` id="form-edit-product" method="POST" enctype="multipart/form-data")

    div(class="form-group")
      lable(for="title") Tiêu đề
      input(type="text"
        class="form-control"
        id="title"
        name="title"
        value=product.title
      )

    div(class="form-group")
      label(for="desc") Mô tả
      textarea(type="text"
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        
      ) #{product.description}
    
    div(class="form-group")
      lable(for="price") Giá
      input(type="number"
        class="form-control"
        id="price"
        name="price"
        value=product.price
        min="0"
      )

    div(class="form-group")
      lable(for="price") % Giảm giá
      input(type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value=product.discountPercentage
        min="0"
      )
  
    div(class="form-group")
      lable(for="title") Số lượng
      input(type="number"
        class="form-control"
        id="stock"
        name="stock"
        value=product.stock
      )

    div(class="form-group" upload-image)
      lable(for="title") Ảnh
      input(type="file"
        class="form-control-file"
        id="thubnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=product.thumbnail
        upload-image-review
        class="image-review"
      )
      <i class="bi bi-x-lg hidden" button-close-image> </i>

    div(class="form-group")
    lable(for="title") Vị trí
    input(type="number"
      class="form-control"
      id="position"
      name="position"
      placeholder="Tự động tăng"
      min="1"
      value=product.position
    )

    div(class="form-group form-check form-check-inline")
      input(type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(product.status=="active" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động

    div(class="form-group form-check form-check-inline")
    input(type="radio"
      class="form-check-input"
      id="statusInActive"
      name="status"
      value="inactive"
      checked=(product.status=="inactive" ? true : false)
    )
    label(for="statusInActive" class="form-check-label") Ngưng hoạt động
    
    div(class="form=group")
      button(
        type="submit"
        class="btn btn-success"
      ) Cập nhật

  

  script(src="/admin/js/product.js")
