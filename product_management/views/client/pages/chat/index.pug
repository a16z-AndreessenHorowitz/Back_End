block main 
  .container
    .row 
      .col-12 
        +box-head("Chat")
      .col-12
        .chat(my-id=user.id)
          .inner-body
            each chat in chats 
              div(class=(chat.user_id==user.id ? "inner-outgoing": "inner-incoming" ))
                if(user.id!=chat.user_id)
                  .inner-name #{chat.infoUser.fullName}
