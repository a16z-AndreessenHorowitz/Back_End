extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 
include ../../mixins/alert.pug 
 
block main 
  +alert(2000)
  +alert-error(2000)

  .container.my-3
    .row 
      .col-12 
        +box-head("Đặt hàng")


    .row 
      .col-12 
        if(cardDetail.products.length > 0)
          table(class="tabel table-bordered")
            thead 
              tr 
                th STT 
                th Ảnh
                th Tên
                th Giá
                th Số lượng 
                th Tổng tiền 
            tbody 
              each item,index in cardDetail.products
                tr
                  td  #{index+1}
                  td
                    img(src=item.productInfo.thumbnail alt=item.productInfo.title width="80px")
                  td #{item.productInfo.title}
                  td #{item.productInfo.title}
                  td #{item.quantity}
                  td #{item.totalPrice}
                  td
                    a(
                      href=`/cart/delete/${item.product_id}` class='btn btn-success'
                    ) Xoá

          h3(class="text-right mt-2") Tổng đơn hàng:#{cardDetail.totalPrice}$
        else 
          h3 Không có sản phẩm nào

    if (cardDetail.products.length > 0)
      .row
        .col-12
          .card.p-4.my-4
            form(action="/checkout/order", method="POST")
              div(class="form-group")
                label(for="fullName") Họ tên
                input(
                  type="text", 
                  class="form-control", 
                  id="fullName", 
                  name="fullName", 
                  required
                )

              div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                  type="text", 
                  class="form-control", 
                  id="phone", 
                  name="phone", 
                  required
                )

              div(class="form-group")
                label(for="address") Địa chỉ
                input(
                  type="text", 
                  class="form-control", 
                  id="address", 
                  name="address"
                )
              
              div(class="form-group")
                button(
                  type="submit"
                  class="btn btn-success btn-block"
                ) Đặt hàng
